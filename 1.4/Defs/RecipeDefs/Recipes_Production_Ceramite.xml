<Defs>
  <RecipeDef>
    <defName>SmeltCeramiteLowGrade</defName>
    <label>smelt low grade ceramite</label>
    <description>Manufacture low grade ceramite from raw ceramite.</description>
    <jobString>Smelting low grade ceramite.</jobString>
    <workAmount>120</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCeramite</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <products>
      <CeramiteLowGrade>30</CeramiteLowGrade>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCeramite</li>
      </thingDefs>
    </fixedIngredientFilter>
    <researchPrerequisite><li>Machining</li></researchPrerequisite>
    <recipeUsers>
        <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>
